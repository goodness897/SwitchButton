<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/switch_track_on_dim" android:state_checked="true" android:state_enabled="false" />
    <!-- disable -->
    <item android:drawable="@drawable/switch_track_off_dim" android:state_enabled="false" />
    <!-- checked pressed -->
    <item android:drawable="@drawable/switch_track_on" android:state_checked="true" android:state_pressed="true" />
    <!-- unchecked pressed -->
    <item android:drawable="@drawable/switch_track_off" android:state_checked="false" android:state_pressed="true" />
    <!-- checked unpressed -->
    <item android:drawable="@drawable/switch_track_on" android:state_checked="true" android:state_pressed="false" />
    <!-- normal -->
    <item android:drawable="@drawable/switch_track_off" />
</selector>